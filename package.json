{
	"name": "proxmox-lxc-ui",
	"version": "1.0.0",
	"description": "Minimal production-quality Proxmox LXC container management UI",
	"main": "src/server.js",
	"type": "module",
	"scripts": {
		"start": "node src/server.js",
		"dev": "node --watch src/server.js --watch src/views --watch src/routes --watch src/services --watch .env",
		"format": "biome format --write .",
		"check": "biome check --write ."
	},
	"keywords": [
		"proxmox",
		"lxc",
		"infrastructure",
		"htmx"
	],
	"author": "lcaohoanq",
	"license": "MIT",
	"dependencies": {
		"dotenv": "^16.3.1",
		"express": "^4.18.2",
		"proxmox-api": "^1.1.1",
		"pug": "^3.0.3"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.5"
	}
}
